# Social Studio Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application
APP_ENV=production
DEBUG=false

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# AI API Keys
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Security
FERNET_KEY=your_fernet_encryption_key_here

# Image & Media Services
IMGBB_API=your_imgbb_api_key_here
IMG_API_KEY=your_img_api_key_here

# Search API Keys
SEARCH_API_KEY=your_search_api_key_1
SEARCH_API_KEY2=your_search_api_key_2

# Web Scraping
APIFY_KEY=your_apify_api_key_here

# Meta (Facebook/Instagram) - Main App (Same App for Both)
META_APP_ID_FB=your_facebook_app_id
META_APP_SECRET_FB=your_facebook_app_secret
META_APP_ID_IG=your_facebook_app_id
META_APP_SECRET_IG=your_facebook_app_secret
FB_LONG_LIVED_USER_ACCESS_TOKEN=your_fb_long_lived_token
PAGE_ACSESS_TOKEN=your_page_access_token
PAGE_ID=your_facebook_page_id
INSTA_AC_ID=your_instagram_account_id
INSTA_WEBHOOK=your_instagram_webhook_token

# Meta Threads - Separate App
META_APP_ID_THREADS=your_threads_app_id
META_APP_SECRET_THREADS=your_threads_app_secret
THREADS_LONG_LIVE_TOKEN=your_threads_long_lived_token
THREADS_USER_ID=your_threads_user_id
THREAD_USERNAME=your_threads_username

# WhatsApp
WHATSAPP_APP_SECRET=your_whatsapp_app_secret
WHATSAPP_APP_SECRET_NEVER_EXPIRE=your_whatsapp_never_expire_token
PHONE_NUMBER_ID=your_phone_number_id

# Twitter/X - OAuth 1.0a (Legacy API)
X_API_KEY=your_twitter_api_key
X_API_KEY_SECRET=your_twitter_api_secret
X_ACCESS_TOKEN=your_twitter_access_token
X_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
X_BEARER_TOKEN=your_twitter_bearer_token
ACCESS_TOKEN_F=your_twitter_access_token_f
ACCESS_TOKEN_SECRET_F=your_twitter_access_token_secret_f

# Twitter/X - OAuth 2.0
TWITTER_CLIENT_ID=your_twitter_oauth2_client_id
TWITTER_CLIENT_SECRET=your_twitter_oauth2_client_secret
X_CLIENT_KEY=your_x_client_key
X_CLIENT_SECRET=your_x_client_secret

# LinkedIn OAuth 2.0
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# TikTok OAuth 2.0
TIKTOK_CLIENT_KEY=your_tiktok_client_key
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret

# Snapchat OAuth 2.0
SNAPCHAT_CLIENT_ID=your_snapchat_client_id
SNAPCHAT_CLIENT_SECRET=your_snapchat_client_secret

# Logging
LOG_LEVEL=info
